# ==========================================
# DISASTER RESPONSE PLATFORM - ENVIRONMENT CONFIGURATION
# ==========================================

# Server Configuration
NODE_ENV=development
PORT=5001

# Database Configuration
# Local MongoDB (for development)
# MONGODB_URI=mongodb://localhost:27017/disaster-response

# MongoDB Atlas (for production)
# Replace with your actual Atlas credentials:
MONGODB_URI=mongodb+srv://your-username:your-password@your-cluster-url.mongodb.net/disaster-response?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Application Limits
MAX_AGE=15
MIN_AGE=5
MAX_ATTEMPTS=3

# Game Configuration
GAME_TIME_LIMIT=300
POINTS_PER_CORRECT=100

# Quiz Configuration
QUIZ_PASSING_PERCENTAGE=60
QUIZ_MAX_QUESTIONS=10